<autoComplete:EntryBase x:Class="TogglDesktop.WPF.AutoComplete.ProjectEntry"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:toggl="clr-namespace:TogglDesktop.WPF"
             xmlns:autoComplete="clr-namespace:TogglDesktop.WPF.AutoComplete"
             mc:Ignorable="d"
             d:DesignWidth="400"
             d:DataContext ="{d:DesignInstance {x:Type autoComplete:ProjectEntrySample}, IsDesignTimeCreatable=True}"
             Style="{toggl:Resources ResourceKey=AutoCompleteItemBase}">

    <StackPanel Height="30" Orientation="Horizontal">
        
        <Border CornerRadius="100" Width="10" Height="10" BorderThickness="0"
                Margin="10, 0, 10, 0">
            <Border.Background><SolidColorBrush Color="{Binding ProjectColor}"/></Border.Background>
        </Border>
        <TextBlock VerticalAlignment="Center" Text="{Binding ProjectName}"/>
        <TextBlock VerticalAlignment="Center" Text="{Binding TaskName}" Foreground="DimGray"/>
        
    </StackPanel>
    
</autoComplete:EntryBase>
